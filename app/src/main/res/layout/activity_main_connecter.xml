<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fond_degrade_noir_rose"
    tools:context=".MainActivityConnecter">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:background="#2f282a"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/edt1"
        android:textColor="#c59ca8"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titre"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:gravity="center"
        android:hint="@string/recherche"
         />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_centerHorizontal="true"
        android:text="@string/search_button_text"
        android:onClick="onClick"
        />

    <TextView
        android:id="@+id/invitationCinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:textColor="#c59ca2"
        android:textSize="20sp"
        android:text="@string/voir" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/voir"
        android:id="@+id/web"
        android:layout_below="@id/invitationCinema" />

</RelativeLayout>